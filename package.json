{
  "name": "desk-jockey-fitness",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@react-native-async-storage/async-storage",
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-codegen",
      "**/react-native-dev-menu",
      "**/react-native-macos",
      "**/react-native-windows"
    ]
  },
  "scripts": {
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "android:metro": "yarn workspace @deskjockeyfitness/mobile start",
    "android:start": "yarn workspace @deskjockeyfitness/mobile android",
    "android:studio": "yarn workspace @deskjockeyfitness/mobile studio",
    "ios:metro": "yarn workspace @deskjockeyfitness/mobile start",
    "ios:start": "yarn workspace @deskjockeyfitness/mobile ios",
    "ios:xcode": "yarn workspace @deskjockeyfitness/mobile xcode",
    "ios:pods": "yarn workspace @deskjockeyfitness/mobile pods",
    "tv:android:metro": "yarn workspace @deskjockeyfitness/tv start",
    "tv:android:start": "yarn workspace @deskjockeyfitness/tv android",
    "tv:android:studio": "yarn workspace @deskjockeyfitness/tv studio",
    "tv:tvos:metro": "yarn workspace @deskjockeyfitness/tv start",
    "tv:tvos:start": "yarn workspace @deskjockeyfitness/tv ios",
    "tv:tvos:xcode": "yarn workspace @deskjockeyfitness/tv xcode",
    "tv:tvos:pods": "yarn workspace @deskjockeyfitness/tv pods",
    "macos:metro": "yarn workspace @deskjockeyfitness/macos start",
    "macos:start": "yarn workspace @deskjockeyfitness/macos macos",
    "macos:xcode": "yarn workspace @deskjockeyfitness/macos xcode",
    "macos:pods": "yarn workspace @deskjockeyfitness/macos pods",
    "web:start": "yarn workspace @deskjockeyfitness/web start",
    "web:build": "yarn workspace @deskjockeyfitness/web build",
    "next:start": "yarn workspace @deskjockeyfitness/next dev",
    "next:build": "yarn workspace @deskjockeyfitness/next build",
    "next:serve": "yarn workspace @deskjockeyfitness/next start",
    "electron:start": "yarn workspace @deskjockeyfitness/electron start",
    "electron:package:mac": "yarn workspace @deskjockeyfitness/electron package:mac",
    "electron:package:win": "yarn workspace @deskjockeyfitness/electron package:win",
    "electron:package:linux": "yarn workspace @deskjockeyfitness/electron package:linux",
    "browser-ext:start": "yarn workspace @deskjockeyfitness/browser-ext start",
    "browser-ext:build": "yarn workspace @deskjockeyfitness/browser-ext build",
    "windows:metro": "yarn workspace @deskjockeyfitness/windows start",
    "windows:start": "yarn workspace @deskjockeyfitness/windows windows",
    "pods": "lerna run pods --stream",
    "lint": "lerna run lint --stream",
    "lint:fix": "lerna run lint:fix --stream",
    "test": "lerna run test --stream",
    "typecheck": "lerna run typecheck --stream"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react-app": "^6.2.2",
    "eslint-plugin-react-native": "^3.11.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2",
    "typescript": "^4.4.2"
  }
}
